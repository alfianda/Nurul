    <!-- JavaScript untuk memutar musik saat tombol diklik -->
    <script>
        const bukaButton = document.getElementById('buka-pesan');
        const overlay = document.getElementById('overlay');
        const suratKonten = document.getElementById('surat-konten');
        const musicPlayer = document.getElementById('music-player');
        
        // Ganti link musik untuk mencoba link yang lain (Clair de Lune)
        const musicUrl = "https://www.youtube.com/embed/R-kZlC_KigY?autoplay=1&loop=1&playlist=R-kZlC_KigY&controls=0&iv_load_policy=3&modestbranding=1";

        bukaButton.addEventListener('click', () => {
            // 1. Sembunyikan overlay
            overlay.style.display = 'none';
            
            // 2. Tampilkan surat
            suratKonten.style.display = 'block';
            
            // 3. Atur sumber musik dan putar
            // Karena ini adalah hasil dari klik pengguna, autoplay=1 akan berfungsi
            musicPlayer.src = musicUrl;
        });
    </script>
